default_platform(:ios)

platform :ios do
  desc "Build the app"
  lane :build do
    setup_ci if ENV['CI']

    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    increment_build_number(
      xcodeproj: "Continuum.xcodeproj",
      build_number: latest_testflight_build_number + 1
    )

    build_app(
      scheme: "Continuum",
      export_method: "app-store",
      output_directory: "./build",
      output_name: "Continuum.ipa",
      xcargs: "-allowProvisioningUpdates"
    )
  end

  desc "Run tests"
  lane :test do
    run_tests(
      scheme: "Continuum",
      device: "iPhone 16"
    )
  end

  desc "Build for development"
  lane :build_dev do
    build_app(
      scheme: "Continuum",
      export_method: "development",
      output_directory: "./build",
      output_name: "Continuum-dev.ipa",
      xcargs: "-allowProvisioningUpdates"
    )
  end

  desc "Upload to TestFlight (internal only)"
  lane :beta do
    build
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "Upload to TestFlight and distribute to external testers"
  lane :beta_external do
    build
    upload_to_testflight(
      distribute_external: true,
      groups: ["Friends"],
      changelog: File.read("./fastlane/metadata/en-US/release_notes.txt")
    )
  end

  desc "Upload metadata only (no build)"
  lane :metadata do
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: true,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Upload to App Store with metadata"
  lane :release do
    build
    upload_to_app_store(
      skip_screenshots: false,
      screenshots_path: "./fastlane/screenshots",
      precheck_include_in_app_purchases: false
    )
  end

  desc "Submit for review (after release)"
  lane :submit do
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_CONTENT"],
      is_key_content_base64: true
    )

    upload_to_app_store(
      skip_binary_upload: true,
      skip_screenshots: true,
      skip_metadata: true,
      submit_for_review: true,
      precheck_include_in_app_purchases: false,
      submission_information: {
        add_id_info_uses_idfa: false
      }
    )
  end
end
